<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet author="Artem" id="drop_pk_simple">
        <dropPrimaryKey  tableName= "notifications_simple" constraintName="pk_simple"/>
    </changeSet>

    <changeSet author="Artem" id="simple_add_consumer_id">
        <addColumn tableName="notifications_simple">
            <column name="consumer_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="Artem" id="add_pk_simple">
        <addPrimaryKey tableName="notifications_simple" columnNames="id" constraintName="pk_simple"/>
    </changeSet>
</databaseChangeLog>
